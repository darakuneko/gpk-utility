{
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist && rm -rf ./dist-electron && vite build && cp -r dist dist-electron/",
    "build:win": "del /s /q dist && del /s /q dist-electron && vite build && xcopy dist dist-electron\\dist /e /i",
    "start": "vite build && npx electron dist-electron/index.js",
    "start:dev": "cross-env NODE_ENV=development vite",
    "start:electron": "vite build && cross-env NODE_ENV=development npx electron dist-electron/index.js",
    "dist:win": "npm run build:win && electron-builder -w",
    "dist:mac": "npm run build && electron-builder -m",
    "dist:linux": "npm run build && electron-builder -l"
  },
  "name": "gpk-utility",
  "version": "1.1.1",
  "description": "GPK Utility",
  "homepage": "https://github.com/darakuneko/gpk-utility",
  "author": {
    "name": "daraku-neko",
    "email": "tvkids@gmail.com"
  },
  "type": "module",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "electron": "36.2.1",
    "electron-builder": "26.0.15",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.3.5",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "main": "./index.js",
  "dependencies": {
    "@babel/core": "7.25.2",
    "@babel/preset-env": "7.25.4",
    "@babel/preset-react": "7.24.7",
    "@electron/notarize": "^2.4.0",
    "@emotion/babel-preset-css-prop": "^11.12.0",
    "@emotion/react": "^11.14.0",
    "@paymoapp/active-window": "^2.1.2",
    "active-win": "^9.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "electron-store": "^10.0.1",
    "firebase": "^11.8.0",
    "node-fetch": "^3.3.2",
    "node-hid": "^3.1.2",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "build": {
    "productName": "GPK Utility",
    "appId": "app.darakuneko.gpk_utility",
    "afterSign": "notarize.cjs",
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "icons/*",
      "index.js",
      "preload.cjs",
      "gpkrc.js",
      "ipcHandlers.js",
      "ipcHandlers/**/*",
      "package.json",
      "src/i18n/locales/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/256x256.ico"
    },
    "mac": {
      "icon": "icons/512x512.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "category": "public.app-category.productivity",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icons"
    }
  }
}
